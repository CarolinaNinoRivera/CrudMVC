
@{
    Layout = null;
}

@model CrudMVC.ViewModels.EstudianteViewModel

<!DOCTYPE html>

<html>
<head>
    <title>| Sistema Control de Notas | Listado de estudiantes|</title>

    <link rel="stylesheet" href="~/Styles/estilo.css" type="text/css" />
    <script src="~/js/Util.js" type="text/javascript"></script>

    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <style type="text/css">
        BODY {
            FONT-SIZE: 8.5pt;
        }

        TD {
            FONT-SIZE: 8.5pt;
        }

        TH {
            FONT-SIZE: 8.5pt;
        }

        BODY {
            BACKGROUND-IMAGE: url('../../Images/fondo.jpg');
            BACKGROUND-COLOR: #ffffff;
        }
    </style>
</head>
<body>
        <table width="1000" border="0" align="center" cellpadding="0" cellspacing="0" bgcolor="#ffffff">
            <tr>
                <td colspan="4">
                    <img src="~/Images/top_fifiu.jpg" width="1000" height="143">
                </td>
            </tr>
            <tr>
                <td width="200" rowspan="2" align="left" valign="top" bgcolor="#37703e">
                    <uc1:UCNavigation ID="UserControl2" runat="server">
                        <table>
                            <tr>
                                <td>
                                    <h2><a href="@Url.Action("Home", "Home")" style="color:white">Home</a></h2>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h2 style="color:bisque">Estudiantes</h2>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h2><a href="@Url.Action("Inicio", "Estudiante")" style="color:white">Listar Estudiantes</a></h2>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h2><a href="@Url.Action("LogOut", "Login")" style="color:white">LogOut</a></h2>
                                </td>
                            </tr>
                        </table>
                    </uc1:UCNavigation>
                </td>
                <td height="20" colspan="3" valign="top">
                    &nbsp;
                    <h2>Bienvenidos al Sistema SCN - Usuario: @Session["Nombre"].ToString() - Listado de estudiantes</h2>
                </td>
            </tr>
            <tr>
                <td width="10" height="350" valign="top">&nbsp;</td>
                <td width="770" valign="top" colspan="3">
                    <div class="container-fluid">
                        @using (Html.BeginForm("Create", "Estudiantes"))
                        {
                            <table cellpadding="2" cellspacing="2">
                                <tr>
                                    <td>@Html.LabelFor(model => model.Estudiantes.Id_Usuario)</td>
                                    <td>@Html.TextBoxFor(model => model.Estudiantes.Id_Usuario)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.Estudiantes.Nombre)</td>
                                    <td>@Html.TextBoxFor(model => model.Estudiantes.Nombre)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.Estudiantes.Apellido)</td>
                                    <td>@Html.TextBoxFor(model => model.Estudiantes.Apellido)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.Estudiantes.Telefono)</td>
                                    <td>@Html.TextBoxFor(model => model.Estudiantes.Telefono)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.Estudiantes.Direccion)</td>
                                    <td>@Html.TextBoxFor(model => model.Estudiantes.Direccion)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.Estudiantes.Email)</td>
                                    <td>@Html.TextBoxFor(model => model.Estudiantes.Email)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.Estudiantes.Usuario)</td>
                                    <td>@Html.TextBoxFor(model => model.Estudiantes.Usuario)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.Estudiantes.Contrasena)</td>
                                    <td>@Html.TextBoxFor(model => model.Estudiantes.Contrasena)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.Estudiantes.Perfil)</td>
                                    <td>@Html.TextBoxFor(model => model.Estudiantes.Perfil)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelFor(model => model.Estudiantes.Titulo)</td>
                                    <td>@Html.TextBoxFor(model => model.Estudiantes.Titulo)</td>
                                </tr>
                                <tr>
                                    <td>&nbsp;</td>
                                    <td><input type="submit" value="Guardar" /></td>
                                </tr>
                            </table>
                        }
                    </div>
                </td>
            </tr>
            <tr>
                <td width="200" height="30" bgcolor="#d2d2c6">&nbsp;</td>
                <td width="10" bgcolor="#d2d2c6">&nbsp;</td>
                <td width="770" bgcolor="#d2d2c6">&nbsp;</td>
                <td width="20" bgcolor="#d2d2c6">&nbsp;</td>
            </tr>
        </table>
</body>
</html>
