
@{
    Layout = null;
    if (Session["Id_Usuario"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<!DOCTYPE html>

<html>
<head>
    <title>| Sistema Control de Notas | Listado de estudiantes|</title>

    <link rel="stylesheet" href="~/Styles/estilo.css" type="text/css" />
    <script src="~/js/Util.js" type="text/javascript"></script>

    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <style type="text/css">
        BODY {
            FONT-SIZE: 8.5pt;
        }

        TD {
            FONT-SIZE: 8.5pt;
        }

        TH {
            FONT-SIZE: 8.5pt;
        }

        BODY {
            BACKGROUND-IMAGE: url('../../Images/fondo.jpg');
            BACKGROUND-COLOR: #ffffff;
        }
    </style>
</head>
<body>
    <form id="form1" runat="server">
        <table width="1000" border="0" align="center" cellpadding="0" cellspacing="0" bgcolor="#ffffff">
            <tr>
                <td colspan="4">
                    <img src="~/Images/top_fifiu.jpg" width="1000" height="143">
                </td>
            </tr>
            <tr>
                <td width="200" rowspan="2" align="left" valign="top" bgcolor="#37703e">
                    <uc1:UCNavigation ID="UserControl2" runat="server">
                        <table>
                            <tr>
                                <td>
                                    <h2><a href="@Url.Action("Home", "Home")" style="color:white">Home</a></h2>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h2 style="color:bisque">Estudiantes</h2>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h2><a href="@Url.Action("Inicio", "Estudiante")" style="color:white">Listar Estudiantes</a></h2>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <h2><a href="@Url.Action("LogOut", "Login")" style="color:white">LogOut</a></h2>
                                </td>
                            </tr>
                        </table>
                    </uc1:UCNavigation>
                </td>
                <td height="20" colspan="3" valign="top">
                    &nbsp;
                    <h2>Bienvenidos al Sistema SCN - Usuario: @Session["Nombre"].ToString() - Listado de estudiantes</h2>
                </td>
            </tr>
            <tr>
                <td width="10" height="350" valign="top">&nbsp;</td>
                <td width="770" valign="top" colspan="3">
                    <div class="container-fluid">
                        <a href="@Url.Action("Create", "Estudiantes")">Nuevo Estudiante</a>
                        <br /><br />
                        <table cellpadding="2" cellspacing="2" border="1">
                            <tr>
                                <th>Cédula</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Teléfono</th>
                                <th>Dirección</th>
                                <th>Email</th>
                                <th>Usuario</th>
                                <th>Contraseña</th>
                                <th>Perfil</th>
                                <th>Título</th>
                                <th>Operaciones</th>
                            </tr>
                            @foreach (var Usuarios in ViewBag.listEstudiantes)
                            {
                                <tr>
                                    <td>@Usuarios.Id_Usuario</td>
                                    <td>@Usuarios.Nombre</td>
                                    <td>@Usuarios.Apellido</td>
                                    <td>@Usuarios.Telefono</td>
                                    <td>@Usuarios.Direccion</td>
                                    <td>@Usuarios.Email</td>
                                    <td>@Usuarios.Usuario</td>
                                    <td>@Usuarios.Contrasena</td>
                                    <td>@Usuarios.Perfil</td>
                                    <td>@Usuarios.Titulo</td>
                                    <td>
                                        <a href="@Url.Action("Delete", "Estudiantes", new {Id_Usuario = Usuarios.Id_Usuario})">Eliminar</a>&nbsp;
                                        <a href="@Url.Action("Edit", "Estudiantes", new {Id_Usuario = Usuarios.Id_Usuario})">Actualizar</a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </td>
            </tr>
            <tr>
                <td width="200" height="30" bgcolor="#d2d2c6">&nbsp;</td>
                <td width="10" bgcolor="#d2d2c6">&nbsp;</td>
                <td width="770" bgcolor="#d2d2c6">&nbsp;</td>
                <td width="20" bgcolor="#d2d2c6">&nbsp;</td>
            </tr>
        </table>
    </form>
</body>
</html>
